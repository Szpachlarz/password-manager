<Application x:Class="password_manager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:password_manager.ViewModels"
             xmlns:views="clr-namespace:password_manager.Views">
    <Application.Resources>

        <ResourceDictionary>

            <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
                <views:LoginView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:RegisterViewModel}">
                <views:RegisterView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:UserPanelViewModel}">
                <views:UserPanelView />
            </DataTemplate>

        </ResourceDictionary>

    </Application.Resources>
</Application>
